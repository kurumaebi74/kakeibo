<%= form_tag("/post/#{@posts.id}/update") do %>
<div>
<h2>日付</h2>
<input type="date" name="date" value="<%= @posts.date %>">
<h2>費用項目</h2>
<select name="category">
<% @categorys.each do |category| %>
    <option><%= category.content %></option>
<% end %>
</select>
<h2>買ったもの</h2>
<input type="text" name="content" value="<%= @posts.content %>">
<h2>値段</h2>
<input type="text" name="value" value="<%= @posts.value %>">
<h2>その他</h2>
<input type="text" name="other" value="<%= @posts.other %>">
<input type="submit" value="登録">
</div>
<% end %>